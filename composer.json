{
    "name": "vanio/coding-standards",
    "description": "Vanio Coding Standard Ruleset for PHP_CodeSniffer.",
    "keywords": ["coding standards", "conventions", "codesniffer"],
    "homepage": "https://github.com/vaniocz/coding-standards",
    "license": "MIT",
    "authors": [
        {"name": "Marek Štípek", "email": "marek.stipek@vanio.cz"}
    ],
    "require": {
        "php": "^7.1",
        "escapestudios/symfony2-coding-standard": "^3.1",
        "slevomat/coding-standard": "^4.5.2",
        "squizlabs/php_codesniffer": "3.x-dev"
    },
    "autoload": {
        "psr-4": {"Vanio\\CodingStandards\\": ""},
        "autoload": {
            "files": ["autoload.php"]
        }
    },
    "scripts": {
        "lint": "\"vendor/bin/phpcs\" -s --standard=ruleset.xml .",
        "fix": "\"vendor/bin/phpcbf\" --standard=ruleset.xml ."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3.x-dev"
        }
    }
}
